{% if maxPages > 1 %}
    <ul class="pagination pagination-sm">
        {% if page > 3 %}
            <li>
                <a href="{{ path(routeName, {page: 1}) }}">1</a>
            </li>
        {% endif %}
        {% if page > 4 %}
            <li>
                <a href="#">...</a>
            </li>
        {% endif %}
        {% for i in 1..maxPages %}
            {% if i <= page+2 and i >= page-2 %}
                <li {{ page == i ? 'class="active"' }}>
                    <a href="{{ path(routeName, {page: i}) }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if page < maxPages-3 %}
            <li>
                <a href="#">...</a>
            </li>
        {% endif %}
        {% if page < maxPages-2 %}
            <li>
                <a href="{{ path(routeName, {page: maxPages}) }}">{{ maxPages }}</a>
            </li>
        {% endif %}
    </ul>
{% endif %}