{% extends 'base.html.twig' %}
{% block title %}{{ 'users.list'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'users.list'|trans }}</h1>

    <table>
        <thead>
        <tr>
            <th>{{ 'username'|trans }}</th>
            <th>E-mail</th>
            <th>{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">{{ 'show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">{{ 'edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ include('pagination.html.twig', { 'routeName': 'user_index'}) }}

{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
